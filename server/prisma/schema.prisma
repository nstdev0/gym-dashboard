generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  engineType = "library"
}

datasource db {
  provider = "mysql"
}

// Definicion de las opciones permitidas
enum Gender {
  MALE
  FEMALE
}

enum DocType {
  DNI
  PASSPORT
  CE
}


// Definición de la tabla 'Member'
model Member {
  id          Int      @id @default(autoincrement())
  
  // Datos Personales
  firstName   String   // nombre
  lastName    String   // apellido
  gender      Gender   // genero (Podrías usar un Enum aquí)
  birthDate   DateTime // nacimiento
  
  // Datos Físicos
  height      Float    // talla (ej: 1.75 o 175)
  weight      Float    // peso (ej: 75.5)
  
  // Identificación
  docType     DocType   // tipo de documento (DNI, Pasaporte, CE)
  docNumber   String   @unique // numero documento (Unique para que no se repita)
  
  // Contacto
  phoneNumber String   // numero de celular

  // Auditoría (Muy útil tenerlo siempre)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Opcional: Si quieres que la tabla en la BD se llame 'members' (plural)
  @@map("members")
}